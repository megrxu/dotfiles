# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
color=#f3f4f5
separator=true
separator_block_width=15
markup=none

# Volume indicator
[volume]
label=
instance=Master
interval=5
signal=10

# Memory usage
[memory]
label=
interval=30

# Disk usage
[disk]
label=
interval=30

# Network interface monitoring
[iface]
color=#00FF00
interval=10
command=iwgetid -r

[bandwidth]
label=
instance=eno2
interval=1

# Battery indicator
[battery]
label=[0]
instance=0
interval=30
separator=false

[battery]
label=[1]
instance=1
interval=30

# Date Time
[time]
label=
command=date '+%a, %d %b %H:%M'
interval=30
